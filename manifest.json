{
    "manifest_version": 2,

    "name": "Leesbalk",
    "description": "Leg de leesbalk over de tekst, om gefocust de regels tekst te lezen ",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "gebruik de leesbalk"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],
    "content_scripts": [
        {
            "matches" : [
                "http://*/*"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
      "scripts": ["background.js"]
    }
}
